{
	"type": "modal",
	"title": {
		"type": "plain_text",
		"text": "TaskTicker"
	},
	"private_metadata": "project_setup_view",
	"submit": {
		"type": "plain_text",
		"text": "Submit"
	},
	"close": {
		"type": "plain_text",
		"text": "Cancel"
	},
	"blocks": [
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": "Update Channel Settings"
			}
		},
		{
			"type": "divider"
		},
		{
			"type": "input",
			"dispatch_action": true,
			"element": {
				"type": "number_input",
				"is_decimal_allowed": false,
				"min_value": "1",
				"action_id": "project_id-action",
				"focus_on_load": true,
				"placeholder": {
					"type": "plain_text",
					"text": "Project ID"
				},
				"dispatch_action_config": {
					"trigger_actions_on": [
						"on_enter_pressed"
					]
				}
			},
			"label": {
				"type": "plain_text",
				"text": "Enter the project ID from Log1 :"
			},
			"block_id": "project_id_input"
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "\n\n"
			}
		},
		{
			"type": "input",
			"element": {
				"type": "users_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select engineer"
				},
				"action_id": "user_select-action"
			},
			"label": {
				"type": "plain_text",
				"text": "Select the Slack handler of engineer :"
			},
			"block_id": "user_select_input"
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "\n\n"
			}
		},
		{
			"type": "input",
			"element": {
				"type": "users_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select scrum"
				},
				"action_id": "scrum_select-action"
			},
			"label": {
				"type": "plain_text",
				"text": "Select the Slack handler of engineer's scrum :"
			},
			"block_id": "scrum_select_input"
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "\n\n"
			}
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "Select day frequency of updates"
			},
			"accessory": {
				"type": "multi_static_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select days"
				},
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "MONDAY"
						},
						"value": "MONDAY"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "TUESDAY"
						},
						"value": "TUESDAY"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "WEDNESDAY"
						},
						"value": "WEDNESDAY"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "THURSDAY"
						},
						"value": "THURSDAY"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "FRIDAY"
						},
						"value": "FRIDAY"
					}
				],
				"action_id": "frequency_select-action"
			},
			"block_id": "frequency_select_input"
		}
	]
}